{
  "semi": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.jsx",
      "options": {
        "singleQuote": false,
        "jsxSingleQuote": false
      }
    }
  ]
}
